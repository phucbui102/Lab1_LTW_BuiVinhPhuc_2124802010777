@model  SachOnline.Models.SACH
@{
    ViewBag.Title = "TRANG CHỦ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="thumbnail">
    <h4 class="tensach">@Model.TenSach</h4>
    <img src="~/Images/@Model.AnhBia" alt="@Model.TenSach" />
    <div class="motasach">
        <p style="padding:20px;padding-top:50px;">
            @Html.Raw(Model.MoTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
        </p>
    </div>
    <p class="ngaycapnhat" style="padding-left:470px;">Ngày Cập Nhật: @Html.FormatValue(Model.NgayCapNhat, "{0:dd-MM-yyyy HH:mm tt}")</p>
    <p class="giaban" style="padding-left:495px;">Giá Bán: <span style="color:cornflowerblue;">@Html.FormatValue(Model.GiaBan, "{0:#,##0}") VNĐ</span></p>
    <p class="addtocard" style="padding-left:510px;">
        <a href="@Url.Action("AddToCard","ShoppingCard") new {id = @Model.MaSach}"
           class="btn btn-primary" role="button">
            <span class="glyphicon glyphincon-shopping-cart"
                  aria-hidden="false"</span>
            Add to Cart
        </a>
    </p>

</div>
