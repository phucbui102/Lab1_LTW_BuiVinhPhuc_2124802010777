@model IEnumerable<SachOnline.Models.SACH>
@{
    ViewBag.Title = "TRANG CHỦ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h2 class="text-center">SÁCH THEO NHÀ XUẤT BẢN</h2>
<hr />
<div class="row text-center">
    @foreach (var sach in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbnail">
                <img src="~/Images/@sach.AnhBia" alt=" @sach.AnhBia" />
                <class class="caption">
                    <h4 style="min-height:70px;">
                        <a href="@Url.Action("ChiTietSach","SachOnline", new {id = sach.MaSach})">
                            @sach.TenSach
                        </a>
                    </h4>
                    <p>
                        <a href="#" class="btn btn-primary" role="button">
                            <span class="glyphicon plyphicon-shopping-cart" aria-hidden="true"></span>
                            Add to Cart
                        </a>
                    </p>
                </class>
            </div>
        </div>
    }
