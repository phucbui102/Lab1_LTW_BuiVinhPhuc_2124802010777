<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }
        
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("đăng Ký", "DangKy", "User")</li>
                    <li>@Html.ActionLink("đăng Nhập", "DangNhap", "User")</li>
                    <li>@Html.ActionLink("trang chủ", "Index", "SachOnline")</li>
                    <li style="padding: 0 10px">@Html.Action("GioHangPartial", "GioHang")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        @Html.Action("ChuDePartial", "SachOnline")
        @Html.Action("NhaXuatBanPartial", "SachOnline")
    </div>

    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
        @RenderBody();
    </div>
</body>
</html>
